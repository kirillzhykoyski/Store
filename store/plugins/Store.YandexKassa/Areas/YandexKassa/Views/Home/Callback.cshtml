@using Store.YandexKassa.Areas.YandexKassa.Models
@model ExampleModel

@{
    ViewData["Title"] = "Заказ оплачен";
}

<h1>Заказ оплачен</h1>

<p>
    Заказ оплачен. Чтобы завершить оформление, нажмите кнопку <em>Далее</em>.
</p>

<form action="@Model.ReturnUri" method="post">
    <!-- Скрытое поле с именем сервиса оплаты -->
    <input type="hidden" name="serviceName" value="YandexKassa" />

    <!-- Скрытое поле с текущим шагом -->
    <input type="hidden" name="step" value="1" />

    <!-- Скрытое поле с идентификатором заказа -->
    <input type="hidden" name="values[orderId]" value="@Model.OrderId" />

    <button type="submit" class="btn btn-success">Далее</button>
</form>
